<%- include('admin_partials/header') %>
<%- include('admin_partials/sidebar') %>
            <div class="app-main__outer">
                <div class="app-main__inner">
                    <div class="app-page-title app-page-title-simple">
                        <div class="page-title-wrapper">
                            <div class="page-title-heading">
                                <div>
                                    <div class="page-title-head center-elem">
                                        <span class="d-inline-block pr-2">
                                            <i class="lnr-apartment opacity-6"></i>
                                        </span>
                                        <span class="d-inline-block">HighHill Dashboard</span>
                                    </div>
                                    <div class="page-title-subheading opacity-10">
                                        <nav class="" aria-label="breadcrumb">
                                            <ol class="breadcrumb">
                                                <li class="breadcrumb-item">
                                                    <a>
                                                        <i aria-hidden="true" class="fa fa-home"></i>
                                                    </a>
                                                </li>
                                                <li class="breadcrumb-item">
                                                    <a href="/dashboard">Dashboards</a>
                                                </li>
                                                
                                            </ol>
                                        </nav>
                                    </div>
                                </div>
                            </div>
                           
                        </div>
                    </div>     
                    <div id="msg"></div>
            
                        
                    <div class="row">
                        <div class="col-sm-12 col-md-7 col-lg-12">
                            <div class="mb-3 card">
                                <div class="card-header-tab card-header">
                                    <div class="card-header-title font-size-lg text-capitalize font-weight-normal">CONTACT INFORMATION
                                    </div>
                                    
                                </div>
                                <div class="pt-0 card-body">
                                   <form id="contact_form"  style="margin-top:2%">
                                     <div class="row">
                                        <div class="col-md-12">
                                            <div class="position-relative form-group">
                                               <label for="">Email</label>
                                               <input type="email" class="form-control" id="email" name="email">
                                            </div>
                                        </div> 
                                        <div class="col-md-12">
                                            <div class="position-relative form-group">
                                               <label for="">Phone Number</label>
                                               <input type="text" class="form-control" id="phone_number" name="phone_number">
                                            </div>
                                        </div> 
                                        <div class="col-md-12">
                                            <div class="position-relative form-group">
                                                <label for="">Address</label>
                                               <textarea name="address" id="address" class="form-control"></textarea>
                                            </div>
                                        </div> 


                                     </div>
                                     <div class="btn-actions-pane-right text-capitalize">
                                        <button type="submit" class="btn btn-warning" style="float: right;">Save Conact</button>
                                    </div>
                                   </form>
                                </div>
                            </div>
                        </div>



                        <div class="col-sm-12 col-md-7 col-lg-12">
                            <div class="mb-3 card">
                                <div class="card-header-tab card-header">
                                    <div class="card-header-title font-size-lg text-capitalize font-weight-normal">PRAYER REQUESTS </div>
                                    
                                </div>
                                <div class="pt-0 card-body">

                                    <table style="width: 100%;" id="example"
                                    class="table table-hover table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Phone Number</th>
                                            <th>Prayer Request</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                       <% prayerRequest.forEach(function(prayer) { %>
                                        <tr>
                                            <td><%= prayer._id %></td>
                                            <td><%= prayer.name %></td>
                                            <td><%= prayer.email %></td>
                                            <td><%= prayer.phone %></td>
                                            <td><%= prayer.prayer %></td>
                                            <td>
                                                
                                                <button class="btn btn-outline-danger" id="delete-prayer" data-id="<%=prayer._id %>" >delete</button></td>
                                        </tr>
                                       <% }) %>
                                        
                                       
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th>ID</th>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Phone Number</th>
                                            <th>Prayer Request</th>
                                            <th>Action</th>
                                        </tr>
                                    </tfoot>
                                </table>
                                  
                                </div>
                            </div>

                            
                        </div>
                        

                         
                        
                    </div>
                
                </div>
                <%- include('admin_partials/footer') %>
               